#!/bin/sh -e

npm ci
cp node_modules/preact/dist/preact.mjs ../vendor/
cp node_modules/preact/dist/preact.module.js.map ../vendor/
cp node_modules/preact/hooks/dist/hooks.mjs ../vendor/
cp node_modules/preact/hooks/dist/hooks.module.js.map ../vendor/
cp node_modules/htm/dist/htm.mjs ../vendor/
cp node_modules/htm/preact/index.mjs ../vendor/htm-preact.mjs
echo "Copied dependencies to ../vendor"